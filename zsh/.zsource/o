#!/bin/zsh
o () {
	if [ -f $1 ] ; then
		case $1 in
			*.org)   emacsgui 	$1  ;;      
			*.mkv)   mpv	 	$1  ;;      
			*.mp4)   mpv	 	$1  ;;      
			*.mp3)   mpv	 	$1  ;;      
			*.webm)  mpv	 	$1  ;;      
			*.pdf)   zathura	$1  ;;      
			*.ps)    zathura	$1  ;;      
			*.cbz)   zathura	$1  ;;      
			*.html)  surf		$1  ;;      
			*.png)	 feh		$1	;;
			*.jpg)	 feh		$1	;;
			*.webp)	 feh		$1	;;
			*)       vim 		$1	;;
		esac
	else
		vim $1
		#echo "'$1' is not a valid file"
	fi
}
