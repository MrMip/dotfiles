#!/bin/sh

vpnstatus () {
    STAT=$(ip addr | grep proton | wc -l)
    if [ $STAT -eq 2 ]
    then
	echo "Connected"
    else
	echo "Disconneced"
    fi
}
ldate () {
    echo $(date +"%a %b %D %R:%S")
}

ram () {
	free -h | grep Mem | awk '{ print $3"/"$2  }'
}
 
disk () {
	df -h -t btrfs | awk '{if (NR!=1) {print $6": " $3"/"$2" ("$5")"} }'
	df -h -t ext4 | awk '{if (NR!=1) {print $6": " $3"/"$2" ("$5")"} }'
	df -h -t fat32 | awk '{if (NR!=1) {print $6": " $3"/"$2" ("$5")"} }'
	df -h -t ntfs | awk '{if (NR!=1) {print $6": " $3"/"$2" ("$5")"} }'
}
kernal () {
	uname -r
}

notify-send "No Bar" "$(ldate)\nVpn: $(vpnstatus)\nExip: $(curl -L ifconfig.me)\nRam: $(ram)\nKernal: $(kernal)\n\n---Disk Usage---\n$(disk)"
